<Window
    x:Class="HorizonSwapper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:HorizonSwapper.Converters"
    Title="HorizonSwapper"
    Width="700"
    Height="500"
    Background="#FF1E1E1E">

    <Window.Resources>
        <conv:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter" />
        <conv:SelectedFolderTextConverter x:Key="SelectedFolderTextConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>


    <Border
        Margin="10"
        Padding="10"
        Background="#FF2D2D30"
        BorderBrush="#FF3E3E42"
        BorderThickness="1"
        CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Scrollable Character List  -->
            <Border
                Grid.Column="0"
                Margin="5"
                Background="#FF2E2E2E"
                BorderBrush="#FF515151"
                BorderThickness="1"
                CornerRadius="4">

                <ListBox
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding Characters}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Padding" Value="5" />
                            <Setter Property="Margin" Value="2" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                            <ContentPresenter
                                                Margin="2"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!--  Hover effect  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF3A3A3A" />
                                            </Trigger>
                                            <!--  Selected effect  -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF2196F3" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!--  Image Preview Area  -->
            <Border
                Grid.Column="1"
                Margin="5"
                Background="#FF3A3A3A"
                BorderBrush="#FF515151"
                BorderThickness="1"
                CornerRadius="5">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="IMAGE" />
            </Border>

            <!--  Bottom Buttons and Selected Path  -->
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="5">
                <!--  Buttons Row using Grid  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Left buttons  -->
                    <Button
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        Background="#FF2196F3"
                        BorderBrush="#FF1976D2"
                        Click="BrowseButton_Click"
                        Content="Select Game Directory"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Visibility="{Binding IsNoPathSelected, Converter={StaticResource BoolToVis}}" />

                    <Button
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        Background="#FF3A3A3A"
                        BorderBrush="#FF515151"
                        Click="ClearButton_Click"
                        Content="Clear Set Directory"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Visibility="{Binding IsPathSelected, Converter={StaticResource BoolToVis}}" />

                    <!--  Right buttons  -->
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Background="#FF3A3A3A"
                            BorderBrush="#FF515151"
                            Click="ResetButton_Click"
                            Content="Reset"
                            FontWeight="SemiBold"
                            Foreground="White" />

                        <Button
                            Width="120"
                            Height="30"
                            Background="#FF4CAF50"
                            BorderBrush="#FF388E3C"
                            Click="ActivateButton_Click"
                            Content="Set Character"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </StackPanel>
                </Grid>

                <!--  Selected Folder Path  -->
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding SelectedFolderPath, Converter={StaticResource SelectedFolderTextConverter}}" />
            </StackPanel>

        </Grid>
    </Border>
</Window>
