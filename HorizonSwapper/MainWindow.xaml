<Window
    x:Class="HorizonSwapper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:HorizonSwapper.Converters"
    Title="HorizonSwapper"
    Width="750"
    Height="800"
    Background="#FF1E1E1E">

    <Window.Resources>
        <conv:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter" />
        <conv:SelectedFolderTextConverter x:Key="SelectedFolderTextConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>


    <Border
        Margin="10"
        Padding="10"
        Background="#FF2D2D30"
        BorderBrush="#FF3E3E42"
        BorderThickness="1"
        CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>



            <StackPanel
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="5,5,5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!--  Launch button  -->
                        <ColumnDefinition Width="10" />
                        <!--  Spacer  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  Skip launcher toggle  -->
                        <ColumnDefinition Width="*" />
                        <!--  Filler  -->
                    </Grid.ColumnDefinitions>

                    <!--  Launch Game button  -->
                    <Button
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        Background="#FF2196F3"
                        BorderBrush="#FF1976D2"
                        Click="LaunchGameButton_Click"
                        Content="Launch Game"
                        FontWeight="SemiBold"
                        Foreground="White"
                        IsEnabled="{Binding IsPathSelected}" />

                    <!--  Skip Launcher checkbox  -->
                    <CheckBox
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Content="Skip Launcher"
                        Foreground="White"
                        IsChecked="{Binding SkipLauncher, Mode=TwoWay}" />
                </Grid>
            </StackPanel>


            <!--  Scrollable Character List  -->
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Margin="5,4,5,5"
                Background="#FF2E2E2E"
                BorderBrush="#FF515151"
                BorderThickness="1"
                CornerRadius="4">

                <ListBox
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemContainerStyle="{StaticResource CharacterListItemStyle}"
                    ItemsSource="{Binding Characters}"
                    MouseDoubleClick="ActivateButton_Click"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="3"
                                FontSize="14"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!--  Image Preview Area  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,4,5,5"
                Background="#FF3A3A3A"
                BorderBrush="#FF515151"
                BorderThickness="1"
                ClipToBounds="True"
                CornerRadius="5">
                <Grid>
                    <!--  Actual image  -->
                    <Image
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{Binding SelectedCharacter.ImagePath}"
                        Stretch="Uniform"
                        StretchDirection="DownOnly"
                        Visibility="{Binding SelectedCharacter.ImagePath, Converter={StaticResource NullToVisibilityConverter}}" />

                    <!--  Placeholder text  -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="NO CHARACTER SELECTED"
                        Visibility="{Binding SelectedCharacter.ImagePath, Converter={StaticResource InverseNullToVisibilityConverter}}" />
                </Grid>
            </Border>


            <!--  Bottom Buttons and Selected Path  -->
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5,5,5,5">
                <!--  Buttons Row using Grid  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Left buttons  -->
                    <Button
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        Background="#FF2196F3"
                        BorderBrush="#FF1976D2"
                        Click="BrowseButton_Click"
                        Content="Select Game Directory"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Visibility="{Binding IsNoPathSelected, Converter={StaticResource BoolToVis}}" />

                    <Button
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        Background="#FF3A3A3A"
                        BorderBrush="#FF515151"
                        Click="ClearButton_Click"
                        Content="Clear Set Directory"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Visibility="{Binding IsPathSelected, Converter={StaticResource BoolToVis}}" />

                    <!--  Right buttons  -->
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Background="#FF3A3A3A"
                            BorderBrush="#FF515151"
                            Click="ResetButton_Click"
                            Content="Reset"
                            FontWeight="SemiBold"
                            Foreground="White" />

                        <Button
                            Width="120"
                            Height="30"
                            Background="#FF4CAF50"
                            BorderBrush="#FF388E3C"
                            Click="ActivateButton_Click"
                            Content="Set Character"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </StackPanel>
                </Grid>

                <!--  Selected Folder Path  -->
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding SelectedFolderPath, Converter={StaticResource SelectedFolderTextConverter}}"
                    TextTrimming="CharacterEllipsis"
                    ToolTip="{Binding SelectedFolderPath}" />
            </StackPanel>

        </Grid>
    </Border>
</Window>
